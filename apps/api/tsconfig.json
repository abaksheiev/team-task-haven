{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["jest"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,    
    "emitDecoratorMetadata": true,     
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.test.ts"]
}
